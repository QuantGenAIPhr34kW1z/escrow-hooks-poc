{
  "name": "escrow-hooks",
  "version": "0.2.0",
  "description": "Composable Escrow Primitive with Compliance & ZK Hooks",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:forge": "forge test",
    "compile": "hardhat compile",
    "deploy": "hardhat deploy",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "verify": "hardhat verify",
    "coverage": "hardhat coverage",
    "gas-report": "REPORT_GAS=true hardhat test",
    "clean": "hardhat clean && rm -rf cache artifacts",
    "format": "prettier --write '**/*.{js,json,md,sol}'",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "escrow",
    "smart-contracts",
    "defi",
    "web3",
    "hooks",
    "zk-proofs",
    "compliance"
  ],
  "author": "escrow-hooks contributors",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-foundry": "^1.1.1",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-deploy": "^0.11.45",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.1.0",
    "prettier-plugin-solidity": "^1.2.0",
    "solhint": "^4.0.0",
    "solidity-coverage": "^0.8.5",
    "typechain": "^8.3.0",
    "typescript": ">=4.5.0"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
